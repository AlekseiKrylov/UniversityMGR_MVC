@model Student

@{
    ViewData["Title"] = $"Details {Model.FullName}";
}
<h1>Details</h1>

<div>
    <h4>Student: @Model.FullName</h4>
    @if (Model.GroupId == null)
    {
        <h6>
            Group: No group assigned
        </h6>
    }
    else
    {
    <h6>
        Group: 
        <a asp-controller="Group" asp-action="Details" asp-route-id="@Model.GroupId">@Html.DisplayFor(model => model.Group.Name)</a>
        Course: 
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Group.CourseId">@Html.DisplayFor(model => model.Group.Course.Name)</a>
    </h6>
    }
    <hr />
</div>

<div>
    <a asp-action="Index">To List of Students</a> |
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
</div>